/* reset */
body,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,p,img,blockquote,button,pre,fieldset,form,input,select,option,figure
  margin: 0
  padding: 0
  border: 0
h1,h2,h3,h4,h5,h6
  font-weight: bold
  overflow: hidden
s,i,u,em
  font-style: normal
ol,ul,li
  list-style-type: none
img,button
  border: none
  max-width: 100%
form,input,select,option
  outline none
input:-webkit-autofill
  -webkit-box-shadow: 0 0 0 1000px white inset
  box-shadow:         0 0 0 1000px white inset
div
  box-sizing: border-box
a, button.submit
  color: #40759b
  text-decoration: none
  -webkit-transition: all .1s ease-in
  -moz-transition: all .1s ease-in
  -o-transition: all .1s ease-in
  transition: all .1s ease-in
a
  &:focus
    outline: none
  &:hover,&:active
    color: #40759b
    text-decoration: underline
.clear
  clear: both
.hide
  display none
  opacity: 0
  height: 0px
blockquote,.stressed
  margin: 1.5em 0 1.5em 1em
  padding: 10px
  border-left:   5px solid #e6e6e6
  border-radius: 5px
  background: linear-gradient(to right, rgba(247, 248, 248, 1), rgba(247, 248, 248, 0))
  color: #966
strong, b, em
  font-weight: bold
.hidden1
  display: none

